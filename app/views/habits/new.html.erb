<div class="header">
  <h1>New habit</h1>
  <h2>Create a new habit</h2>
</div>

<div class="content">
  <h2 class="content-subhead">Habit one:</h2>
  <%= simple_form_for @habit, url: habits_path do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.button :submit, class: 'pure-button button-success' %>
  <% end %>

</div>
